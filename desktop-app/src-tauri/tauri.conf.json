{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ElyAnalyzer Desktop",
  "version": "1.0.0",
  "identifier": "com.elyanalyzer.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "plugins": {},
  "app": {
    "windows": [
      {
        "title": "ElyAnalyzer Desktop",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "center": true,
        "resizable": true,
        "maximizable": true,
        "minimizable": true,
        "closable": true,
        "decorations": true,
        "alwaysOnTop": false,
        "fullscreen": false,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [
      "binaries/analysis-engine"
    ],
    "publisher": "ElyAnalyzer",
    "copyright": "Copyright Â© 2024 ElyAnalyzer. All rights reserved.",
    "category": "DeveloperTool",
    "shortDescription": "Free Code Analysis Tool",
    "longDescription": "ElyAnalyzer Desktop is a free, open-source code analysis platform with 15 specialized analyzers for security, performance, and code quality assessment.",
    "homepage": "https://elyanalyzer.com",
    "license": "MIT",
    "licenseFile": "../LICENSE",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "allowDowngrades": true,
      "wix": {
        "language": "en-US"
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.13",
      "exceptionDomain": "",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    },
    "linux": {
      "deb": {
        "depends": []
      },
      "appimage": {
        "bundleMediaFramework": false
      }
    }
  }
}
