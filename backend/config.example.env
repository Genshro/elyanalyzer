# ElyAnalyzer Backend Environment Variables
# Copy this file to .env and fill in your actual values

# Supabase Configuration
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_KEY=your-service-role-key-here

# Server Configuration
PORT=8080
ENVIRONMENT=production
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Security
JWT_SECRET=your-super-secret-jwt-key-here
API_RATE_LIMIT=100
API_BURST_LIMIT=200

# Analysis Engine
ANALYSIS_ENGINE_PATH=./analysis-engine.exe
REPORTS_DIR=./reports

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/elyanalyzer.log

# File Upload Security
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.js,.ts,.go,.py,.java,.cpp,.c,.rs,.php,.rb,.cs,.swift,.kt,.dart

# Path Security
ALLOWED_PROJECT_PATHS=/home,/Users,/var/projects,/workspace

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Session Security
SESSION_TIMEOUT_MINUTES=120
MAX_CONCURRENT_SESSIONS=5

# Database Security
DB_POOL_SIZE=10
DB_MAX_IDLE_CONNECTIONS=5
DB_CONNECTION_TIMEOUT=30

# Server Configuration
GIN_MODE=release
HOST=localhost

# Analysis Engine Configuration
MAX_FILE_SIZE=100MB
ANALYSIS_TIMEOUT=300s

# CORS Configuration
FRONTEND_URL=http://localhost:5173
DESKTOP_URL=http://localhost:1420

# Logging Configuration
LOG_FORMAT=json

# Caching Configuration (Optional)
ENABLE_CACHING=false

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@elyanalyzer.com

# Analytics Configuration (Optional)
ANALYTICS_ENABLED=false
ANALYTICS_ENDPOINT=https://analytics.elyanalyzer.com

# Feature Flags
ENABLE_PDF_REPORTS=true
ENABLE_DASHBOARD_API=true
ENABLE_ADMIN_API=true
ENABLE_METRICS=true

# Development Settings
DEBUG_MODE=false
ENABLE_SWAGGER=false
ENABLE_PROFILER=false 